if [ "$1" == "" ]; then
    echo Usage: $0 version-target
    echo Example: makezip 1.0.30.0-win32
    exit 1;
fi;

VAT="$1";
rm -f "vitalnix-$VAT.zip";

spec="${0%/*}/vitalnix.spec";
td=`mktemp -d "/tmp/makezip.$$.XXXXXX"`;
mkdir -p "$td/vitalnix-$VAT";

echo Copying
for f in `grep '^#win32\\$' $spec | cut -b 9-`; do
    f="./$f";
    fbase="${f%/*}";
    mkdir -p "$td/vitalnix-$VAT/$fbase";
    cp -av "$f" "$td/vitalnix-$VAT/$fbase/";
done;

echo Removing CVS folders
find "$td" -iname CVS -print0 | xargs -0r rm -Rfv;
vhome="$PWD";
cd "$td"/;

echo Stripping EXEs
find . -iname "*.exe" -print0 | xargs -0r strip -sv;
echo Stripping DLLs
find . -iname "*.dll" -print0 | xargs -0r strip -sv;

echo Packaging
zip -9r "$vhome/vitalnix-$VAT.zip" "vitalnix-$VAT";
rm -Rf "$td";

#==============================================================================
